//======================================================
// This function determines the length of a string.
//======================================================

int strlen(char s[])
{
	int i = 0;
	while(s[i] != 0)
		i++;
	return i;

}

//======================================================
// strcpy
// Parameters;
// - char array b (target)
// - char array a (source)
// Return Value
// - none, but array b is changed by contents of a
//======================================================

void strcpy(char b[], char a[])
{
	int i = 0;
	while(a[i] != 0)
	{
		b[i] = a[i]
		i++;
	}
	b[i] = 0;
}


//======================================================
// strcmp
// Parameters;
// - char array b 
// - char array a 
// Return Value
// - -1, 0, or 1
//======================================================


int strcmp(char c[], char d[])
{
	int i = 0;
	while(a[i] == b[i])
		i++;
	if (a[i] > b[i])
		return 1;
	if (a[i] < b[i])
		return -1;
	else
		return 0;
}




















